.row
  .span3
    = render "shared/editor_sidebar"

  .span9
    %section.page-content
      .row
        .span1.offset6
          %button.btn.btn-success{:type=>"submit"} Save
        .span2
          =link_to "New Site", new_recommend_config_path(:owner=>params[:owner], :table=>params[:table]), :class=>"btn btn-primary"
      %ul.nav.nav-tabs
        %li.active= link_to "Sites", root_path
        %li= link_to "Other", root_path
      
      %table.table.table-striped
        %tr
          %th id
          - @table_schema.table_fields.each do |field|
            - if field[:group] == "key"
              %th= field[:label]
          %th operation
      
        - @recommend_configs.each do |config|
          %tr
            %td= config.id
            - @table_schema.table_fields.each do |field|
              - if field[:group] == "key" and config["key"]
                %td= config["key"][field[:label]]
            %td
              = link_to 'Show', recommend_config_path(config, :owner=>params[:owner], :table=>params[:table]), :class=>"btn btn-small"
              = link_to 'Edit', edit_recommend_config_path(config, :owner=>params[:owner], :table=>params[:table]), :class=>"btn btn-small btn-info"
              = link_to 'Destroy', recommend_config_path(config, :owner=>params[:owner], :table=>params[:table]), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-small btn-danger"
