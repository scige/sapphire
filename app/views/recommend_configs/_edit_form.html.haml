= form_tag recommend_config_path(@recommend_config), :method=>:put, :class=>"form-horizontal" do
  .accordion#accordion2
    - divide_group_fields.each do |group, fields|
      .accordion-group
        .accordion-heading
          %a.accordion-toggle{"data-toggle"=>"collapse", "data-parent"=>"#accordion2", :href=>"#collapse#{group}"}= "#{group} config"
        .accordion-body.collapse.in{:id=>"collapse#{group}"}
          .accordion-inner
            - fields.each do |field|
              = fields_for "#{@table_schema.table}[#{field.group}]" do |f|
                .control-group
                  .control-label
                    = f.label field[:label]
                  .controls
                    /= debug @recommend_config[group][field[:name]]
                    = f.text_field field[:name], @recommend_config[group][field[:name]]

  .control-group
    .controls
      = submit_tag "Update", :class=>"btn btn-success"
      = link_to 'Back', recommend_configs_path, :class=>"btn"

