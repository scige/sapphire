- if flash and flash.any?
  - flash.each do |key, value|
    - if :success == key
      .alert-box
        .alert.alert-success
          %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert"}= "&times;".html_safe
          = value
    - elsif :error == key
      .alert-box
        .alert.alert-error
          %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert"}= "&times;".html_safe
          = value
    - else
      .alert-box
        .alert.alert-info
          %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert"}= "&times;".html_safe
          = value

