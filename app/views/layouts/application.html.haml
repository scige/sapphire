%html
  %head
    %title= Sapphire
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          /.brand= link_to image_tag("logo.png", :width=>75), root_path
          = link_to "Sapphire", root_path, :class=>"brand"
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href=>"#"} Home
              %li
                %a{:href=>"#about"} About
              %li
                %a{:href=>"#contact"} Contact
    
    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header List header
              %li.active= link_to "Home", root_path
              %li= link_to "Library", root_path
        .span9
          = yield

