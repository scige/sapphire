.hero-unit
  .row
    .offset2.span6
      %h2 用户登录
  
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class=>"form-horizontal"}) do |f|
        .control-group
          .control-label
            = f.label "邮箱"
          .controls
            = f.email_field :email
      
        .control-group
          .control-label
            = f.label "密码"
          .controls
            = f.password_field :password
      
        /.control-group
        /  .controls
        /    - if devise_mapping.rememberable?
        /      = f.check_box :remember_me
        /      = f.label :remember_me
      
        .control-group
          .controls
            = f.submit "登录", :class=>"btn btn-info"

