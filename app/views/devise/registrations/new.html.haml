.hero-unit
  .row
    .offset2.span6
      %h2 用户注册
  
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class=>"form-horizontal"}) do |f|
        = devise_error_messages!
      
        .control-group
          .control-label
            = f.label "邮箱"
          .controls
            = f.email_field :email
      
        .control-group
          .control-label
            = f.label "密码"
          .controls
            = f.password_field :password
      
        .control-group
          .control-label
            = f.label "确认密码"
          .controls
            = f.password_field :password_confirmation
      
        .control-group
          .controls
            = f.submit "注册", :class=>"btn btn-info"

