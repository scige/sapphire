.row
  .span3
    = render "shared/deploy_sidebar"

  .span9
    %section.page-content
      %h3 上线单列表

      %table.table.table-striped
        %tr
          %th Status
          %th Rec package
          %th Rerank package
          %th Site package
          %th Item package
          %th Trim package
          %th Query package
          %th Aliguess package
          %th Operation
      
        - @deploy_data.each do |deploy_datum|
          %tr
            %td= deploy_datum.status
            %td= deploy_datum.rec_package
            %td= deploy_datum.rerank_package
            %td= deploy_datum.site_package
            %td= deploy_datum.item_package
            %td= deploy_datum.trim_package
            %td= deploy_datum.query_package
            %td= deploy_datum.aliguess_package
            %td
              = link_to 'Show', deploy_datum, :class=>"btn btn-small"
              = link_to 'Edit', edit_deploy_datum_path(deploy_datum), :class=>"btn btn-small btn-info"
              = link_to 'Destroy', deploy_datum, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-small btn-danger"
      
      %br
      
      = link_to '新建上线单', new_deploy_datum_path, :class=>"btn btn-primary"

