.row
  .span3
    = render "shared/deploy_sidebar"

  .span9
    %section.page-content
      %h3 部署机器列表
      
      %table.table.table-striped
        %tr
          %th Name
          %th Status
          %th Address
          %th Agent
          %th Directory
          %th Operation
      
        - @deploy_machines.each do |deploy_machine|
          %tr
            %td= deploy_machine.name
            %td= deploy_machine.status
            %td= deploy_machine.host
            %td= deploy_machine.agent
            %td= deploy_machine.directory
            %td
              = link_to 'Show', deploy_machine, :class=>"btn btn-small"
              = link_to 'Edit', edit_deploy_machine_path(deploy_machine), :class=>"btn btn-small btn-info"
              = link_to 'Destroy', deploy_machine, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class=>"btn btn-small btn-danger"
      
      %br
      
      = link_to '新建部署机器', new_deploy_machine_path, :class=>"btn btn-primary"

