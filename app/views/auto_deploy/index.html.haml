.row
  .span3
    = render "shared/deploy_sidebar"

  .span9
    %section.page-content
      %h3 开始自动化部署

      %table.table.table-striped
        %tr
          %th{:width=>100} 环境
          %th{:width=>100} 地址
          %th{:width=>100} 状态
          %th{:width=>100} 操作
      
        - @deploy_machines.each do |deploy_machine|
          %tr
            %td= deploy_machine.name
            %td= deploy_machine.address
            %td= deploy_machine.status
            %td
              =link_to "部署", deploy_auto_deploy_index_path, :class=>"btn btn-small btn-success"
              =link_to "回滚", rollback_auto_deploy_index_path, :class=>"btn btn-small btn-danger"

