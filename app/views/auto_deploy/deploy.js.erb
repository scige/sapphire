$(function() {
  $(".deploy_mask").hide(0);
  var $tdStatus = $("#td-status-" + <%= params[:row] %>);
  $tdStatus.empty();

  if (<%= @agent_status %> == 0) {
    $tdStatus.text("<%= @deploy_machine.status %>");
    alert("Deploy Agent Server没有响应，请检查后重试！");
    return;
  }

  $tdStatus.text("<%= @response_status %>");
  if ("<%= @response_status %>" != "<%= Setting.deploy_machine_status.deploy_success %>") {
    alert("<%= @response_detail %>");
  }
});
