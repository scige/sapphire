= form_for(@site) do |f|
  - if @site.errors.any?
    #error_explanation
      %h2
        = pluralize(@site.errors.count, "error")
        prohibited this site from being saved:

      %ul
      - @site.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :scope
    %br
    = f.text_field :scope
  .field
    = f.label :scope_type
    %br
    = f.text_field :scope_type
  .field
    = f.label :domain
    %br
    = f.text_field :domain
  .actions
    = f.submit :class=>"btn btn-success"
